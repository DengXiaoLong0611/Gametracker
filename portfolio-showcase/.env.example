# 数据库配置
DATABASE_URL=postgresql://portfolio:portfolio_password_2025@localhost:5432/portfolio_db
# 或者使用SQLite (开发环境)
# DATABASE_URL=sqlite:///./database/portfolio.db

# Redis缓存配置 (可选)
REDIS_URL=redis://localhost:6379/0

# 应用配置
HOST=0.0.0.0
PORT=8000
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# 安全配置
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# 文件上传配置
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,svg,mp4,mov,avi,webm,mp3,wav,ogg,pdf,doc,docx,txt,md

# 图片处理配置
THUMBNAIL_SIZE=300,300
IMAGE_QUALITY=85
WATERMARK_ENABLED=false
WATERMARK_TEXT=© Your Name

# 邮件配置 (可选)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# 第三方服务配置 (可选)
# Cloudinary (图片CDN)
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# AWS S3 (文件存储)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# Google Analytics (可选)
# GA_TRACKING_ID=GA-XXXXXXXXX

# 社交媒体链接
SOCIAL_GITHUB=https://github.com/yourusername
SOCIAL_WEIBO=https://weibo.com/yourusername
SOCIAL_EMAIL=contact@yourdomain.com
SOCIAL_WEBSITE=https://yourdomain.com

# 网站配置
SITE_NAME=我的作品集
SITE_DESCRIPTION=展示我的创作作品和个人项目
SITE_URL=https://yourdomain.com
SITE_AUTHOR=Your Name

# 分页配置
DEFAULT_PAGE_SIZE=12
MAX_PAGE_SIZE=50

# 缓存配置
CACHE_TTL=3600
ENABLE_CACHE=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5

# 备份配置 (可选)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30